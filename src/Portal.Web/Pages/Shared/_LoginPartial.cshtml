@using Microsoft.AspNetCore.Identity

@inject SignInManager<Portal.Domain.Models.ApplicationUser> SignInManager
@inject UserManager<Portal.Domain.Models.ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="nav-link text-light">Hello @UserManager.GetUserName(User)!</a>
            </li>
            <li>
                <form  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="form-inline navbar-right">
                    <button type="submit" class="btn btn-light">Logout</button>
                </form>
            </li>
        </ul>

}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register" class="nav-link text-light">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login" class="nav-link text-light">Login</a></li>
    </ul>
}