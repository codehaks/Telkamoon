@model Portal.Application.Books.Models.BookViewModel

<div class="row">
    <div class="col-2">
        <img src="@Model.ImagePath" alt="@Model.ImagePath" class="img-fluid rounded" />
    </div>
    <div class="col-10">
        <h4>@Model.Name</h4>
        <p>Author : @Model.Author</p>
        <p>Year : @Model.Year</p>
        <p>Pages : @Model.Pages</p>
        <p>Price : @Model.Price</p>
        <p>
            <a asp-page="/shop/book/more" asp-route-bookId="@Model.Id" asp-route-name="@Model.Name" class="btn btn-primary">More...</a>
            <a asp-action="create" asp-route-bookid="@Model.Id" asp-controller="order" asp-area="" class="btn btn-success" style="width:200px"> Order now</a>
        </p>
    </div>
</div>